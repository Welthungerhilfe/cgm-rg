### qa environment
# TODO write with environment variable

* * * * * echo "Started RG" > /proc/1/fd/1 2>/proc/1/fd/2

* * * * * /usr/bin/flock -n /app/result-gen.lock /usr/local/bin/python3 /app/src/result_gen_with_api.py --scan_parent_dir /app/data/scans/ --blur_workflow_path /app/src/schema/blur-workflow-post.json --face_recognition_name face_recognition --face_recognition_version 1.0.0 > /proc/1/fd/1 2>/proc/1/fd/2

* * * * * echo "Finished RG" > /proc/1/fd/1 2>/proc/1/fd/2

